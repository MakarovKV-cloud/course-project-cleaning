<Window x:Class="CourseProjectCleaning.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Регистрация" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Фамилия:*" Margin="0,0,0,5"/>
                <TextBox x:Name="txtLastName" Height="25"/>

                <TextBlock Text="Имя:*" Margin="0,10,0,5"/>
                <TextBox x:Name="txtFirstName" Height="25"/>

                <TextBlock Text="Отчество:" Margin="0,10,0,5"/>
                <TextBox x:Name="txtMiddleName" Height="25"/>

                <TextBlock Text="Логин:*" Margin="0,10,0,5"/>
                <TextBox x:Name="txtLogin" Height="25"/>

                <TextBlock Text="Пароль:*" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="25"/>

                <TextBlock Text="Повторите пароль:*" Margin="0,10,0,5"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="25"/>

                <Button x:Name="btnCreate" Content="Создать аккаунт" Click="BtnCreate_Click" 
                        Height="35" Margin="0,20,0,10" Background="#0078D7" Foreground="White"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>