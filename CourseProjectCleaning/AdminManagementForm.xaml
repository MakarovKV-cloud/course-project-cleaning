<Window x:Class="CourseProjectCleaning.AdminManagementForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Панель администратора - Клининговая компания" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Панель статистики -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="#f0f0f0">
            <TextBlock x:Name="totalUsersTextBlock" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="totalRequestsTextBlock" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="newRequestsTextBlock" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="totalIncomeTextBlock" FontWeight="Bold" Margin="10"/>
            <Button Content="Обновить" Click="BtnRefresh_Click" Background="#0078D7" Foreground="White"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <TabControl>
            <TabItem Header="Статистика">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <TextBlock Text="Статистика компании" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                        <!-- Фильтры -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Год:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="cbStatsYear" Width="100" SelectionChanged="StatsYear_SelectionChanged"/>
                        </StackPanel>

                        <!-- Статистика по месяцам -->
                        <GroupBox Header="Статистика заявок и доходов по месяцам" Margin="0,0,0,20">
                            <DataGrid x:Name="dgMonthlyStats" AutoGenerateColumns="False" Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Месяц" Binding="{Binding MonthName}" Width="100"/>
                                    <DataGridTextColumn Header="Кол-во заявок" Binding="{Binding RequestsCount}" Width="100"/>
                                    <DataGridTextColumn Header="Доход" Binding="{Binding TotalIncome, StringFormat={}{0:C}}" Width="120"/>
                                    <DataGridTextColumn Header="Средний чек" Binding="{Binding AverageIncome, StringFormat={}{0:C}}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>

                        <!-- Визуализация заявок (столбчатая диаграмма OxyPlot) -->
                        <GroupBox Header="Количество заявок по месяцам" Margin="0,0,0,20">
                            <oxy:PlotView x:Name="requestsChart" Height="200"/>
                        </GroupBox>

                        <!-- Визуализация доходов (линейная диаграмма OxyPlot) -->
                        <GroupBox Header="Доходы по месяцам" Margin="0,0,0,20">
                            <oxy:PlotView x:Name="incomeChart" Height="200"/>
                        </GroupBox>

                        <!-- Статистика по городам -->
                        <GroupBox Header="Статистика по городам">
                            <DataGrid x:Name="dgCityStats" AutoGenerateColumns="False" Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Город" Binding="{Binding CityName}" Width="200"/>
                                    <DataGridTextColumn Header="Кол-во заявок" Binding="{Binding RequestsCount}" Width="100"/>
                                    <DataGridTextColumn Header="Доход" Binding="{Binding TotalIncome, StringFormat={}{0:C}}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Пользователи">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button x:Name="btnAddUser" Content="Добавить пользователя" Click="BtnAddUser_Click" 
                                Background="Green" Foreground="White"/>
                        <Button x:Name="btnDeleteUser" Content="Удалить пользователя" Click="BtnDeleteUser_Click" 
                                Background="Red" Foreground="White"/>
                    </StackPanel>

                    <DataGrid x:Name="usersDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False"
                              SelectionChanged="UsersDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock x:Name="selectedUserInfoTextBlock" Grid.Row="2" Margin="10" FontStyle="Italic"/>
                </Grid>
            </TabItem>

            <TabItem Header="Заявки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <ComboBox x:Name="statusComboBox" Width="120" Margin="0,0,10,0"/>
                        <Button x:Name="btnUpdateRequestStatus" Content="Обновить статус" 
                                Click="BtnUpdateRequestStatus_Click" Background="Orange" Foreground="White"/>
                        <Button x:Name="btnAssignCleaner" Content="Назначить клинера" 
                                Click="BtnAssignCleaner_Click" Background="Blue" Foreground="White"/>
                        <Button x:Name="btnExportData" Content="Экспорт данных" 
                                Click="BtnExportData_Click" Background="Purple" Foreground="White"/>
                    </StackPanel>

                    <DataGrid x:Name="requestsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False"
                              SelectionChanged="RequestsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Пользователь" Binding="{Binding UserId}" Width="80"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Клинер" Binding="{Binding CleanerId}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBlock x:Name="selectedRequestInfoTextBlock" Grid.Row="2" Margin="10" FontStyle="Italic"/>
                </Grid>
            </TabItem>

            <TabItem Header="Города">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="txtNewCity" Width="200" Margin="0,0,10,0"/>
                        <Button Content="Добавить город" Click="BtnAddCity_Click" Background="Green" Foreground="White"/>
                    </StackPanel>
                    <DataGrid x:Name="dgCities" AutoGenerateColumns="True"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Услуги">
                <StackPanel Margin="10">
                    <DataGrid x:Name="dgServices" AutoGenerateColumns="False" Height="300">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Цена за м²" Binding="{Binding PricePerSquareMeter, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridCheckBoxColumn Header="Требует площадь" Binding="{Binding RequiresArea}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>