<Window x:Class="CourseProjectCleaning.ClientViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель клиента - Клининговая компания" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f0f8ff" Offset="0"/>
            <GradientStop Color="#e6f3ff" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <DockPanel>
        <!-- Заголовок -->
        <Border DockPanel.Dock="Top" Background="#0078D7" Padding="10">
            <TextBlock Text="Мои заявки" Foreground="White" FontSize="18" FontWeight="Bold"/>
        </Border>

        <!-- Панель управления -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button x:Name="btnCreateRequest" Content="Создать заявку" Click="BtnCreateRequest_Click" 
                    Margin="5" Padding="15,8" Background="#28a745" Foreground="White" FontWeight="Bold"
                    Cursor="Hand"/>
            <Button x:Name="btnDeleteRequest" Content="Отменить заявку" Click="BtnDeleteRequest_Click" 
                    Margin="5" Padding="15,8" Background="Red" Foreground="White" FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Таблица заявок -->
        <DataGrid x:Name="dgRequests" DockPanel.Dock="Bottom" Margin="10" AutoGenerateColumns="False"
                  SelectionMode="Single" SelectionChanged="DgRequests_SelectionChanged"
                  Background="White" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Новая">
                                    <Setter Property="Foreground" Value="Blue"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="В работе">
                                    <Setter Property="Foreground" Value="Orange"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Завершена">
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Status}" Value="Отменена">
                                    <Setter Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Дата уборки" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0:C}}" Width="100"/>
                <DataGridTextColumn Header="Клинер" Binding="{Binding CleanerName}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>