<Window x:Class="CourseProjectCleaning.PaymentForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оплата заявки - Клининговая компания" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Оплата заявки" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Номер карты:"/>
            <TextBox x:Name="txtCardNumber" MaxLength="19" TextChanged="TxtCardNumber_TextChanged"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Срок действия:"/>
                    <TextBox x:Name="txtExpiryDate" MaxLength="5" TextChanged="TxtExpiryDate_TextChanged"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="CVV:"/>
                    <TextBox x:Name="txtCVV" MaxLength="3"/>
                </StackPanel>
            </Grid>

            <Border Background="LightYellow" Padding="15" Margin="0,20,0,10" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Сумма к оплате:" FontWeight="Bold"/>
                    <TextBlock x:Name="tbAmount" FontSize="16" FontWeight="Bold" Foreground="Green" Text="2 500 руб."/>
                </StackPanel>
            </Border>

            <Button x:Name="btnPay" Content="Оплатить" Click="BtnPay_Click" 
                    Height="40" Background="Green" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>