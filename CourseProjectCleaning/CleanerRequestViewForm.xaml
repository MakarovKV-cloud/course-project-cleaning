<Window x:Class="CourseProjectCleaning.CleanerRequestViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель клинера - Клининговая компания" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Мои заявки:" VerticalAlignment="Center" Margin="0,0,5,0" FontWeight="Bold"/>
            <ComboBox x:Name="cbStatusFilter" Width="120" SelectionChanged="Filter_SelectionChanged">
                <ComboBoxItem Content="Все"/>
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="Завершена"/>
            </ComboBox>
        </StackPanel>

        <DataGrid x:Name="dgRequests" DockPanel.Dock="Bottom" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Услуги" Binding="{Binding ServicesSummary}" Width="250"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>