<Window x:Class="CourseProjectCleaning.AddRequestsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание заявки - Клининговая компания" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Новая заявка на клининг" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Площадь уборки (м²):"/>
                <TextBox x:Name="txtArea" TextChanged="TxtArea_TextChanged"/>

                <TextBlock Text="Услуги:" Margin="0,15,0,0"/>
                <StackPanel x:Name="spServices" Margin="0,5,0,15"/>

                <TextBlock Text="Дата клининга:"/>
                <DatePicker x:Name="dpCleaningDate" Height="30" SelectedDateChanged="Date_Changed"/>

                <TextBlock Text="Город:" Margin="0,15,0,0"/>
                <ComboBox x:Name="cbCities" Height="30" DisplayMemberPath="Name" SelectionChanged="City_SelectionChanged"/>

                <TextBlock Text="Район:" Margin="0,15,0,0"/>
                <TextBox x:Name="txtDistrict"/>

                <TextBlock Text="Адрес:" Margin="0,15,0,0"/>
                <TextBox x:Name="txtAddress" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Border Background="LightGray" Padding="15" Margin="0,20,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Итоговая стоимость:" FontWeight="Bold"/>
                        <TextBlock x:Name="tbTotalCost" FontSize="18" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </Border>

                <Button x:Name="btnProceedToPayment" Content="Перейти к оплате" Click="BtnProceedToPayment_Click" 
                        Height="40" Background="#0078D7" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>